<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="576dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView_tour_title"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:gravity="center"
            android:text="樓層分布"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/floor_imageButton5"
            android:layout_width="189dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

        <ImageButton
            android:id="@+id/floor_imageButton4"
            android:layout_width="189dp"
            android:layout_height="65dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

        <ImageButton
            android:id="@+id/floor_imageButton3"
            android:layout_width="189dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

        <ImageButton
            android:id="@+id/floor_imageButton2"
            android:layout_width="189dp"
            android:layout_height="65dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

        <ImageButton
            android:id="@+id/floor_imageButton1"
            android:layout_width="189dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

        <ImageButton
            android:id="@+id/floor_imageButtonB1"
            android:layout_width="189dp"
            android:layout_height="65dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>