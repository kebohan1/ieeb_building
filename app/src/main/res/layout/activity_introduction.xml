<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroductionActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="576dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/introduction_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="本館簡介"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/introduction_imageView1"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"
            app:srcCompat="@android:drawable/editbox_background_normal" />

        <ImageView
            android:id="@+id/introduction_imageView2"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            app:srcCompat="@android:drawable/editbox_background_normal" />

        <ImageView
            android:id="@+id/introduction_imageView3"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@android:drawable/editbox_background_normal" />

        <ImageView
            android:id="@+id/introduction_imageView4"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            app:srcCompat="@android:drawable/editbox_background_normal" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>